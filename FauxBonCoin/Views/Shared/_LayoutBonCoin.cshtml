<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_LayoutBonCoin</title>
    <link rel="stylesheet" href="~/css/CssBonCoin.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-2">
                        <a asp-area="" asp-controller="Annonces" asp-action="Index" class="navbar-brand"><img class="logo" src="~/images/logoBonCoin.png" /></a>
                    </div>
                    <div class="col-lg-3">
                        <a asp-controller="Annonces" asp-action="DeposerAnnonce">Deposer une annonce</a>
                    </div>
                    <div class="col-lg-2">
                        <a asp-area="" asp-controller="Annonces" asp-action="Index">offres</a>
                    </div>
                    @if (ViewBag.Logged == true)
                    {
                    <div class="col-lg-offset-2 col-lg-3">
                        <span class="UserInfo">@ViewBag.Nom @ViewBag.Prenom</span>
                        <a asp-controller="Utilisateurs" asp-action="LogOut"> Log out</a>
                    </div>
                    }
                    else
                    {
                        <div class="col-lg-offset-3 col-lg-2">
                            <a asp-area="" asp-controller="Utilisateurs" asp-action="Login">se connecter</a>
                        </div>
                        
                    }

                </div>
            </div>
        </nav>
    </header>
    <section class="container">
        @RenderBody()
    </section>
</body>
</html>
