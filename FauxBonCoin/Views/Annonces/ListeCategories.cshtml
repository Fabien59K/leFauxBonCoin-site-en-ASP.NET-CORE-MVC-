@using FauxBonCoin.Models;
@model List<Category>;
@{ 

}
<div>
    <h1>Liste Catégories <a asp-action="AjouterCategorie" asp-controller="Annonces">Ajouter une categorie</a></h1>
    @if(Model.Count == 0)
    {
        <div>
            Aucune Catégorie
        </div>
    }
    @foreach(Category c in Model)
    {
        <div>
            @c.Titre
            <a asp-action="DeleteCategory" asp-controller="Annonces" asp-route-id="@c.Id">Supprimer</a>
        </div>
    }
</div>