<div class="row">
    <div class="col-lg-12">
        @if ((ViewBag.errors != null))
        {
            if ((ViewBag.errors as List<string>).Count > 0)
            {
                <div class="row">
                    <div class="col-lg-12 alert alert-danger">
                        @foreach (string e in (ViewBag.errors as List<string>))
                        {
                            <div class="row">
                                <div class="col-lg-12">
                                    @e
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        }
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        <div class="Inscription">
            <div class="row">
                <h2 class="col-lg-12">Inscription</h2>
            </div>
            
            @if (ViewBag.Inscription != null)
            {
                if (ViewBag.Inscription)
                {
                    <div class="row">
                        <div class="col-lg-12 alert alert-success">
                            @ViewBag.Message
                        </div>
                    </div>
                }
            }
            <form asp-controller="Utilisateurs" asp-action="Register" method="post">
                <div class="row">
                    <div class="col-lg-12">
                        <input type="text" class="form-control" value="@Model.Nom" name="nom" placeholder="Votre Nom" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <input type="text" class="form-control" value="@Model.Prenom" name="prenom" placeholder="Votre Prénom" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <input type="text" class="form-control" value="@Model.Email" name="email" placeholder="Votre Email" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <input type="text" class="form-control" value="@Model.Telephone" name="telephone" placeholder="Votre Téléphone" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <input type="password" class="form-control" value="@Model.Password" name="password" placeholder="Votre password" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <input type="password" class="form-control" name="cPassword" placeholder="Confirmation password" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <button class="form-control btn btn-default" type="submit">S'inscrire</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="Login">
            <div class="row">
                <h2 class="col-lg-12">Se connecter</h2>
            </div>
            <form asp-controller="Utilisateurs" asp-action="LoginPost">
                <div class="row">
                    <div class="col-lg-12">
                        <input type="text" class="form-control" name="email" placeholder="Votre Email" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <input type="password" class="form-control" name="password" placeholder="Votre password" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <button class="form-control btn btn-default" type="submit">Se connecter</button>
                    </div>
                </div>
            </form>
            </div>
        </div>
    </div>